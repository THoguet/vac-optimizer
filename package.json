{
	"name": "vac-optimizer",
	"version": "1.5.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"serve:ssr:vac-optimizer": "node dist/vac-optimizer/server/server.mjs",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "eslint \"src/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
		"format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\""
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"overrides": [
			{
				"files": "*.html",
				"options": {
					"parser": "angular"
				}
			}
		]
	},
	"private": true,
	"dependencies": {
		"@angular/cdk": "^20.2.12",
		"@angular/common": "^20.3.10",
		"@angular/compiler": "^20.3.10",
		"@angular/core": "^20.3.10",
		"@angular/forms": "^20.3.10",
		"@angular/material": "^20.2.12",
		"@angular/platform-browser": "^20.3.10",
		"@angular/platform-server": "^20.3.10",
		"@angular/router": "^20.3.10",
		"@angular/ssr": "^20.3.9",
		"date-holidays": "^3.26.2",
		"dayjs": "^1.11.19",
		"express": "^5.1.0",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@angular/build": "^20.3.9",
		"@angular/cli": "^20.3.9",
		"@angular/compiler-cli": "^20.3.10",
		"@eslint/js": "^9.39.1",
		"@types/express": "^5.0.1",
		"@types/jasmine": "~5.1.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.10.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jasmine-core": "~5.12.1",
		"jest": "^30.2.0",
		"jest-preset-angular": "^15.0.3",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"prettier": "^3.6.2",
		"typescript": "~5.9.2",
		"typescript-eslint": "^8.46.4"
	}
}
